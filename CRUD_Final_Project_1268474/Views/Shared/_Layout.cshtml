<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.bundle.js"></script>
    <style>

        .main {
            padding-top: 20px;
            height: calc(100vh - 140px);
        }
    </style>
    @RenderSection("styles", false)

</head>
<body>
    <nav class="navbar navbar-light navbar-expand-md shadow-sm" style="background-image: linear-gradient(to right, #36d1dc,#5b86e5);">
        <div class="container-fluid">
            <span class="navbar-brand text-danger">MVC_EXAM<sup>08</sup></span>
            <div class="navbar-collapse collapse">
                <ul class="navbar-nav nav">

                    <li class="nav-item">
                        @Html.ActionLink("Home", "Index", "Home", new { }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Moldule", "Index", "Module", new { }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Exam", "Index", "Exam", new { }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Trainee", "Index", "Trainee", new { }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("CreateCourseModule", "Index", "Course", new { }, new { @class = "nav-link" })
                    </li>
                </ul>
                @if (Request.IsAuthenticated)
                {
                    <ul class="navbar-nav nav ms-auto">

                        <li class="nav-item">
                            @Html.ActionLink("Logout", "Logout", "Account", new { }, new { @class = "nav-link" })
                        </li>
                    </ul>
                }
                else
                {
                    <ul class="navbar-nav nav ms-auto">
                        <li class="nav-item">
                            @Html.ActionLink("Register", "Register", "Account", new { }, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Login", "Login", "Account", new { }, new { @class = "nav-link" })
                        </li>
                  </ul>
                }
            </div>
        </div>
    </nav>
    <img src="~/Uploads/back4.jpg" style="height: 120%; width: 120%; margin:-60px; position: fixed; z-index: -1;">
    <section class="container-fluid main">
        @RenderBody()
    </section>
    @RenderSection("scripts", false)
</body>
</html>