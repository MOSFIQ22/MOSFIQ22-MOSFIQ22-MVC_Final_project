@model CRUD_Final_Project_1268474.ViewModels.TraineeEditModel
@{
    ViewBag.Title = "Edit";
}

<h3 class="rounded d-flex justify-content-center bg-info text-light">Edit Trainee Form</h3>
<div class="row">
    <div class="col-12">
        @using (Html.BeginForm("Edit", "Trainee", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.HiddenFor(x => x.TrainneID)
            <div class="form-group row mb-1">
                @Html.LabelFor(x => x.TrainneName, new { @class = "col-form-label col-form-label-sm col-2" })
                <div class="col-4">
                    @Html.TextBoxFor(x => x.TrainneName, new { @class = "form-control form-control-sm" })
                    @Html.ValidationMessageFor(x => x.TrainneName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row mb-1">
                @Html.LabelFor(x => x.TraineeAddress, new { @class = "col-form-label col-form-label-sm col-2" })
                <div class="col-4">
                    @Html.TextBoxFor(x => x.TraineeAddress, new { @class = "form-control form-control-sm" })
                    @Html.ValidationMessageFor(x => x.TraineeAddress, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row mb-1">
                @Html.LabelFor(x => x.Email, new { @class = "col-form-label col-form-label-sm col-2" })
                <div class="col-4">
                    @Html.TextBoxFor(x => x.Email, new { @class = "form-control form-control-sm" })
                    @Html.ValidationMessageFor(x => x.Email, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row mb-1">
                @Html.LabelFor(x => x.BirthDate, new { @class = "col-form-label col-form-label-sm col-2" })
                <div class="col-4">
                    @Html.TextBoxFor(x => x.BirthDate, new { @class = "form-control form-control-sm date" })
                    @Html.ValidationMessageFor(x => x.BirthDate, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row mb-1">
                @Html.LabelFor(x => x.CourseID, new { @class = "col-form-label col-form-label-sm col-2" })
                <div class="col-4">
                    @Html.DropDownListFor(x => x.CourseID, new SelectList(ViewBag.Courses, "CourseID", "BatchName"), "Select", new { @class = "form-select form-select-sm" })
                    @Html.ValidationMessageFor(x => x.CourseID, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row mb-1">
                @Html.LabelFor(x => x.IsRunning, new { @class = "col-form-label col-form-label-sm col-2" })
                <div class="col-4">
                    @Html.CheckBoxFor(x => x.IsRunning, new { @class = "form-check" })
                    @Html.ValidationMessageFor(x => x.IsRunning, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row mb-1">
                @Html.LabelFor(x => x.Picture, new { @class = "col-form-label col-form-label-sm col-2" })
                <div class="col-4">
                    @Html.TextBoxFor(x => x.Picture, new { @class = "form-control form-control-sm", type = "file" })
                    @Html.ValidationMessageFor(x => x.Picture, "", new { @class = "text-danger" })
                </div>
                <div class="col-1">
                    <img src="~/Uploads/@ViewBag.CurrentPic" class="img-thumbnail" style="width:50px" />
                </div>
            </div>

            <div class="form-group row mb-1">

                <div class="col-4 offset-2">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </div>
            <div class="col-12">
                @Html.ActionLink("Back to list", "Index")
            </div>
        }
    </div>
</div>
@section scripts{
    <script src="~/Scripts/jquery-3.6.0.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
}

