@model CRUD_Final_Project_1268474.Models.Course
@{
    ViewBag.Title = "CreateCourseModule";
}
<div class="col-12 px-5">
    <h3 class="rounded d-flex justify-content-center bg-info text-light">Add new Course+Module</h3>
    @using (Html.BeginForm("CreateCourseModule", "Course"))
    {
        <div class="form-group row mb-1">
            @Html.LabelFor(x => x.BatchName, new { @class = "col-form-label col-form-label-sm col-2" })
            <div class="col-4">
                @Html.TextBoxFor(x => x.BatchName, new { @class = "form-control form-control-sm" })
                @Html.ValidationMessageFor(x => x.BatchName, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group row mb-1">
            @Html.LabelFor(x => x.CourseName, new { @class = "col-form-label col-form-label-sm col-2" })
            <div class="col-4">
                @Html.EnumDropDownListFor(x => x.CourseName, new { @class = "form-select form-select-sm" })
                @Html.ValidationMessageFor(x => x.CourseName, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group row mb-1">
            @Html.LabelFor(x => x.CourseDesc, new { @class = "col-form-label col-form-label-sm col-2" })
            <div class="col-4">
                @Html.TextBoxFor(x => x.CourseDesc, new { @class = "form-control form-control-sm" })
                @Html.ValidationMessageFor(x => x.CourseDesc, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group row mb-1">
            @Html.LabelFor(x => x.CourseCost, new { @class = "col-form-label col-form-label-sm col-2" })
            <div class="col-4">
                @Html.TextBoxFor(x => x.CourseCost, new { @class = "form-control form-control-sm" })
                @Html.ValidationMessageFor(x => x.CourseCost, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group row mb-1">
            @Html.LabelFor(x => x.CourseDuration, new { @class = "col-form-label col-form-label-sm col-2" })
            <div class="col-4">
                @Html.TextBoxFor(x => x.CourseDuration, new { @class = "form-control form-control-sm" })
                @Html.ValidationMessageFor(x => x.CourseDuration, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group row mb-1">
            @Html.LabelFor(x => x.StartDate, new { @class = "col-form-label col-form-label-sm col-2" })
            <div class="col-4">
                @Html.TextBoxFor(x => x.StartDate, new { @class = "form-control form-control-sm date" })
                @Html.ValidationMessageFor(x => x.StartDate, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group row mb-1">
            @Html.LabelFor(x => x.EndDate, new { @class = "col-form-label col-form-label-sm col-2" })
            <div class="col-4">
                @Html.TextBoxFor(x => x.EndDate, new { @class = "form-control form-control-sm date" })
                @Html.ValidationMessageFor(x => x.EndDate, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group row mb-1">
            @Html.LabelFor(x => x.Available, new { @class = "col-form-label col-form-label-sm col-2" })
            <div class="col-4">
                @Html.CheckBoxFor(x => x.Available, new { @class = "form-check" })
                @Html.ValidationMessageFor(x => x.Available, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="d-flex justify-content-between">
            <h4>Modules</h4>
            <button type="button" id="add" class="btn rounded-circle bg-light">+</button>
        </div>
        <div id="child">
            @Html.Action("CreateModuleEntry")
        </div>
        <div class="form-group row mb-1">

            <div class="col-4 offset-2">
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </div>
        <div class="col-12">
            @Html.ActionLink("Back to list", "Index")
        </div>
    }
</div>
@section scripts {

    <script src="~/Scripts/jquery-3.6.0.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script>
        $(() => {
            $("#add").click(() => {
                $.ajax({
                    type: "POST",
                    url: "/Course/CreateModuleEntry",
                    success: r => {
                        console.log(r);
                        $("#child").append(r);
                    }
                });
            })
        });
    </script>

}



